.ct-all-page {
    a {
        border-bottom: 0px;
    }
}

.ct-category-all-page {
  text-align: center;
  margin-bottom: 30px;

  .ct-category-all {
    margin-top: 20px;
    font-size: 16px;
  }

  .category-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .category-list-item {
    margin: 5px 10px;
    display: inline-block;
  }

  .category-list-count {
    color: $grey;
    &:before {
      display: inline;
      content: " ("
    }
    &:after {
      display: inline;
      content: ") "
    }
  }

  .ct-category-list-child { padding-left: 10px; }
}

.ct-tag-cloud {
  text-align: center;

  a {
    display: inline-block;
    margin: 10px;
  }
}