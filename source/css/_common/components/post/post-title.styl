.posts-expand .post-title {
  font-size: 26px;
  text-align: center;
  word-break: break-word;
  font-weight: $posts-expand-title-font-weight

  +mobile() {
    font-size: 22px;
  }
}

.posts-expand .post-sub-title {
  text-align: center;
  word-break: break-word;
  font-weight: 300;

  +mobile() {
    font-size: 18px;
  }
}

.posts-expand .post-title-link {
  display: inline-block;
  position: relative;
  color: $black-light;
  border-bottom: none;
  line-height: 1.2;
  vertical-align: top;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #000;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }

  .fa { font-size: 16px; }
}

h1, h2, h3, h4, h5, h6 {
  position: relative !important;
}

.article-heading {
  &:hover {
    .article-anchor {
      visibility: visible;
    }
  }
}

.article-anchor {
  position: absolute
  left: 0px
  color: RGB(234, 64, 32)
  border-bottom: 0px
  visibility: hidden;

  &:before {
    content: "#"
  }
}
